<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskTracker.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="24"
            Spacing="16">

            <Label Text="Task Tracker" Style="{StaticResource Headline}" />

            <Entry
                Placeholder="Task description"
                Text="{Binding Description}"/>

            <Button
                Text="{Binding RecordButtonText}"
                Clicked="OnRecordDescriptionClicked" />

            <Label
                Text="{Binding RecordingStatus}"
                TextColor="{StaticResource Gray500}" />

            <Label Text="Start" FontFamily="OpenSansSemibold" />
            <HorizontalStackLayout Spacing="12">
                <DatePicker Date="{Binding StartDate}" />
                <TimePicker Time="{Binding StartTime}" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="12">
                <Button Text="+15" Clicked="OnAddDurationClicked" CommandParameter="15" />
                <Button Text="+30" Clicked="OnAddDurationClicked" CommandParameter="30" />
                <Button Text="+45" Clicked="OnAddDurationClicked" CommandParameter="45" />
                <Button Text="+60" Clicked="OnAddDurationClicked" CommandParameter="60" />
            </HorizontalStackLayout>

            <Label
                Text="{Binding EstimatedEndTime, StringFormat='End: {0:g}'}"
                TextColor="{StaticResource Gray300}"
                FontSize="14"
                FontAttributes="Bold" />

            <Button
                Text="Save Task"
                Clicked="OnSaveTaskClicked" />

            <HorizontalStackLayout
                HorizontalOptions="FillAndExpand"
                Spacing="24">
                <Label Text="Last Tasks" Style="{StaticResource SubHeadline}" />
                <Label Text="{Binding Tasks.Count}" Style="{StaticResource SubHeadline}" FontSize="12" />
            </HorizontalStackLayout>

            <CollectionView ItemsSource="{Binding Tasks}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="12" Margin="0,6">
                            <Grid ColumnDefinitions="*,Auto">
                                <VerticalStackLayout Spacing="6">
                                    <Label Text="{Binding Description}" FontFamily="OpenSansSemibold" />
                                    <Label Text="{Binding StartTime, StringFormat='Start: {0:g}'}" />
                                    <Label Text="{Binding EndTime, StringFormat='End: {0:g}'}" />
                                    <Label Text="{Binding DurationText, StringFormat='Duration: {0}'}" />
                                </VerticalStackLayout>
                                <Button
                                    Grid.Column="1"
                                    Text="✕"
                                    Padding="8"
                                    BackgroundColor="LightGray"
                                    Clicked="OnDeleteTaskClicked" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
