<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskTracker.MeterDetailPage"
             Title="Meter Details">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="16">

            <Label Text="{Binding Name}" Style="{StaticResource Headline}" />
            <Label Text="{Binding Category}" TextColor="{StaticResource Gray500}" />
            <Label Text="{Binding Number}" TextColor="{StaticResource Gray500}" />
            <Label Text="{Binding Note}" TextColor="{StaticResource Gray500}" />

            <Label Text="Positions" Style="{StaticResource SubHeadline}" />

            <HorizontalStackLayout Spacing="12">
                <Entry Placeholder="{Binding ValuePlaceholder}"
                    WidthRequest="200"
                    Keyboard="Numeric"
                    Text="{Binding NewPositionValue}" />
                <Button Text="Add" Clicked="OnAddPositionClicked" />
            </HorizontalStackLayout>

            <CollectionView ItemsSource="{Binding Positions}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="10" Margin="0,4">
                            <HorizontalStackLayout Spacing="12">
                                <Label Text="{Binding AddedAt, StringFormat='Datum: {0:dd.MM.yyyy HH:mm}'}" />
                                <Label Text="{Binding Value, StringFormat='Wert: {0:F2}'}" />
                            </HorizontalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
