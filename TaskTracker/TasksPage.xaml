<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskTracker.TasksPage"
             Title="All Tasks">

    <ScrollView>
        <VerticalStackLayout
            Padding="24"
            Spacing="16">

            <Label Text="All Tasks" Style="{StaticResource Headline}" />

            <SearchBar
                Placeholder="Search description"
                Text="{Binding SearchText}" />

            <HorizontalStackLayout Spacing="12">
                <Label Text="Filter by date" VerticalOptions="Center" />
                <Switch IsToggled="{Binding UseDateFilter}" />
            </HorizontalStackLayout>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                <DatePicker Date="{Binding FilterFrom}" />
                <DatePicker Grid.Column="1" Date="{Binding FilterTo}" />
            </Grid>

            <HorizontalStackLayout Spacing="12">
                <Picker
                    Title="Year"
                    ItemsSource="{Binding Years}"
                    SelectedItem="{Binding SelectedYear}" />
                <Button
                    Text="Export Excel"
                    Clicked="OnExportExcelClicked" />
            </HorizontalStackLayout>

            <Button
                Text="Backup Database"
                Clicked="OnBackupDatabaseClicked" />

            <Button
                Text="Import Backup"
                Clicked="OnImportBackupClicked" />

            <CollectionView ItemsSource="{Binding Tasks}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="12" Margin="0,6">
                            <Grid ColumnDefinitions="*,Auto">
                                <VerticalStackLayout Spacing="6">
                                    <Label Text="{Binding Description}" FontFamily="OpenSansSemibold" />
                                    <Label Text="{Binding StartTime, StringFormat='Start: {0:g}'}" />
                                    <Label Text="{Binding EndTime, StringFormat='End: {0:g}'}" />
                                    <Label Text="{Binding DurationText, StringFormat='Duration: {0}'}" />
                                </VerticalStackLayout>
                                <Button
                                    Grid.Column="1"
                                    Text="âœ•"
                                    Padding="8"
                                    BackgroundColor="LightGray"
                                    Clicked="OnDeleteTaskClicked" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
